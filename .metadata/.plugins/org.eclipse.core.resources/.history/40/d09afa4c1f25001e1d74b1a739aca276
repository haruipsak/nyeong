package com.beans;

//DB는 여러 개 연결 가능함.

public class DataBaseCon {
	public static final String DRIVER = "org.h2.Driver";
	public static final String URL = "jdbc:h2:tcp://localhost/~/pt";

	public static final String SQL_Board = 
			"INSERT INTO board"
					+ "(num, name, subject, content, hitcount, date)"
					+ "VALUES(?, ?, ?, ?, ?, ?)";
	
	
	public static final String SQL_BOOK_SELECT =
			"SELECT bk_uid uid, bk_title title, bk_summary summary, bk_price price, "
			+ "bk_viewcnt viewcnt, bk_regdate regdate " + "FROM book ORDER BY bk_uid DESC";
}