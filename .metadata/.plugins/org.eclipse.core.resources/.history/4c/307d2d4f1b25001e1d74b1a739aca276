package com.beans;

public class Snippet {
	public BookDAO() {
			try {
				Class.forName(D.DRIVER);
				conn = DriverManager.getConnection(D.URL, D.USERID, D.USERPW);
			} catch(Exception e) {
				e.printStackTrace();
			}
		}
		
		public void close() throws SQLException {
			if (rs != null) rs.close();
			if (pstmt != null) pstmt.close();
			if (conn != null) conn.close();
		}
	}
}

