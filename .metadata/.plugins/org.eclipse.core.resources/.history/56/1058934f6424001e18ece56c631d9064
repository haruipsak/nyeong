package project;

import java.io.IOException;
import java.lang.reflect.Method;
import java.sql.SQLException;
import java.util.List;

import javax.servlet.ServletConfig;
import javax.servlet.ServletContext;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet("/CatfoodControl")
public class CatfoodControl extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
   private CatfoodDAO dao;
   private ServletContext ctx;
   private final String START_PAGE = "project/mainhome.jsp";
	
   

	
	public void init(ServletConfig config) throws ServletException {
	super.init(config);
	dao = new CatfoodDAO();
	ctx = getServletContext();
	}

	
	protected void service(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		request.setCharacterEncoding("utp-8");
		String action = request.getParameter("action");
		
		dao = new CatfoodDAO();
		
		Method m;
		String view = null;
		
		if (action == null) {
			action = "mainhome";
		}
		
		try {
			m = this.getClass().getMethod(action, HttpServletRequest.class);
			view = (String)m.invoke(this, request);
		} catch (NoSuchMethodException e) {
			e.printStackTrace();
			ctx.log("요청 없음");
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	
	}

	public String mainhome(HttpServletRequest request) {
		List<Catfood> catfood;
		
		catfood = dao.getAll();
		request.setAttribute("mainhome", catfood);
		
		return "project/mainhome.jsp";
	}
	
	
	
	public String doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		String catfoodname = request.getParameter("catfoodname");
		
		try {
			Catfood  c = dao.getCatfood(catfoodname);
			request.setAttribute("catfoodname", c);
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return "project/dry-grade.jsp";	
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
	}
	 public CatfoodControl() {
	        super();
	     
	    }
}
